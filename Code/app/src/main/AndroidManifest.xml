<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bsuir.golda.moneymanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.TransactionPlanActivity"
            android:label="@string/title_activity_transaction_plan"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.CostActivity"
            android:label="@string/title_activity_cost"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.inputActivities.InputTransactionPlanActivity" />
        <activity android:name=".view.inputActivities.InputCostActivity"></activity>
        <activity
            android:name=".view.inputActivities.InputTransactionActivity"
            android:label="@string/title_activity_input_transaction"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>